<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href="/stylesheets/style.css" />
    <title>Flight List</title>
</head>
<body>
    <h1>Flight List</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departs On</th>
            </tr>
        </thead>
        <tbody>
            <!-- if statement -->
            <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %> </td>
                <td><%= f.airport %> </td>
                <td><%= f.flightNo %> </td>
                <td><%= f.departs %> </td>
                <td><a href='/flights/<%= f.id %>'>Details</a></td>
            </tr>
            <% }); %>
            <!-- close if statement -->
        </tbody>
    </table>
</body>
</html>